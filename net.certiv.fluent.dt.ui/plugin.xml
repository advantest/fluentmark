      <command
            name="Format text"
            description="Format text"
            categoryId="net.certiv.fluent.dt.ui.category.source"
            id="net.certiv.fluent.dt.ui.edit.text.format">
      </command>
      <command
            categoryId="net.certiv.fluent.dt.ui.category.source"
            description="Unwrap text"
            id="net.certiv.fluent.dt.ui.edit.text.unwrap"
