      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="net.certiv.fluentmark.ui.addMarkdownValidationsBullder"
               icon="icons/obj16/fluentmark_doc.png"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                     </adapt>
                  </iterate>
                  <iterate>
                     <not>
                        <test
                              forcePluginActivation="true"
                              property="net.certiv.fluentmark.ui.isEnabled">
                        </test>
                     </not>
                  </iterate>
                  <iterate>
                     <test
                           forcePluginActivation="true"
                           property="net.certiv.fluentmark.ui.isAccessible">
                     </test>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
         <command
               commandId="net.certiv.fluentmark.ui.removeMarkdownValidationsBullder"
               icon="icons/obj16/fluentmark_doc.png"
