                           property="net.certiv.fluentmark.ui.isEnabled">
                     </test>
                  </iterate>
                  <iterate>
                     <test
                           forcePluginActivation="true"
                           property="net.certiv.fluentmark.ui.isAccessible">
                     </test>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
